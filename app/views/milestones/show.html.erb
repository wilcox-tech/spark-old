<% provide :title, @milestone.name %>

<%
  content_for :toolbox, "<li><b>Link</b> a requirement</li>".html_safe if can? :edit, @milestone
  content_for :toolbox, "<li><b>Add</b> a requirement</li>".html_safe if can? :edit, @milestone
  content_for :toolbox, "<li>#{link_to raw('<b>Edit</b> this milestone'), edit_version_milestone_path(@milestone)}</li>".html_safe if can? :edit, @milestone
  content_for :toolbox, "<li>#{link_to raw('<b>Complete</b> this milestone'), complete_version_milestone_path(@milestone), :method => 'put'}</li>".html_safe if can? :edit, @milestone
  content_for :toolbox, "<li>#{link_to raw('<b>Remove</b> milestone'), version_milestone_path(@milestone), :method => "delete"}</li>".html_safe if can? :destroy, @milestone
  
  provide :breadcrumbs, "#{ link_to 'Projects', projects_path } >> #{ link_to @milestone.version.project.name, @milestone.version.project } >> #{ link_to @milestone.version, @milestone.version } >>".html_safe
%>

  <h1><%= @milestone.name %></h1>
  <div>Due by: <strong><%= @milestone.due_by %></strong></div>
  <div><%= completion_text_for(@milestone) %></div>
  <hr/>
  <div><%= simple_format(@milestone.description) %></div>
