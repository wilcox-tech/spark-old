<% provide :title, "New Project" %>

<% provide :toolbox, "<li><a href=\"/help/creating-a-project\">New project help</a></li>".html_safe %>

<%= form_for @project, {:html => {:class => 'form-horizontal'}} do |form| %>
  <fieldset>
    <legend>Describe the project.</legend>
    
    <div class="control-group">
      <%= form.label :name, :class => "control-label required" %>
      <div class="controls">
        <%= form.text_field :name, :class => "heading" %>
      </div>
    </div>
    
    <div class="control-group">
      <%= form.label :desc, :class => "control-label required" %>
      <div class="controls">
        <%= form.text_area :desc, :size => "50x10" %>
      </div>
    </div>
  
  </fieldset>
  
  <fieldset>
    <legend>Optionally, describe the project's initial version.</legend>

    <%= fields_for :version do |version_fields| %>
      <div class="control-group">
        <%= version_fields.label :codename, :class => "control-label" %>
        <div class="controls">
          <%= version_fields.text_field :codename, :class => "heading" %>
        </div>
      </div>
      
      <div class="control-group">
        <%= version_fields.label :name, :class => "control-label required" %>
        <div class="controls">
          <%= version_fields.text_field :name %>
        </div>
      </div>
    <% end %>
  
  </fieldset>

  <div class="form-actions">
    <%= form.submit :class => "btn btn-primary" %>
  </div>
<% end %>
